/* pages/detail/detail.wxss */
.bg {
  position: relative;
}

.bg::after {
  content: "";
  display: block;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0;
  left: 0;
}

.left-img {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 50rpx;
  left: 10rpx;
  z-index: 99;
}

.desc {
  position: absolute;
  bottom: 30rpx;
  left: 0;
  width: 100%;
  z-index: 99;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  box-sizing: border-box;
  color: #fff;
  font-size: 30rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
}

.author,
.tag {
  margin-top: 20rpx;
}

.info {
  padding: 16rpx;
  color: #333;
  line-height: 50rpx;
  font-size: 30rpx;
}

.number-lists {
  display: flex;
  border-bottom: 20rpx solid #ccc;
  padding-bottom: 30rpx;
}

.number-list {
  flex: 1;
  text-align: center;
  border-right: 2rpx solid #ccc;
}

.number-list:nth-child(3) {
  border-right: none
}

.number {
  color: #ff7173;
}

.name {
  font-size: 28rpx;
  color: #333;
  margin: 16rpx;
}

.top {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  align-items: center;
}

.top-left {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.top-right {
  font-size: 30rpx;
  color: #999;
}



.lists {
  display: flex;
  padding: 0 20rpx;
}

.list {
  margin-right: 20rpx;
}

.list image {
  width: 260rpx;
  height: 160rpx;
  border-radius: 10rpx;
}

.c-name {
  width: 260rpx;
  margin-top: 20rpx;
  font-size: 30rpx;
}

.c-name.active {
  color: #ff7173;
}

.bottom {
  padding: 0 20rpx 20rpx;
}

















.comments {
  margin-top: 20px;
  padding: 10px;
}

.comment-list {
  margin-top: 10px;
}

.comment {
  display: flex;
  align-items: flex-start;
  margin-bottom: 10px;
  padding-bottom: 10px;
  border-bottom: 1px solid #eaeaea;
}

.comment-avatar {
  width: 40px;
  height: 40px;
  /* 使头像呈现圆形 */
  border-radius: 50%;
  margin-left: 10px;
  margin-right: 10px;
}

.comment-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.comment-user {
  font-weight: bold;
  margin-bottom: 5px;
}

.comment-text {
  margin-bottom: 5px;
}

.comment-actions {
  display: flex;
  /* 使点赞和回复靠右显示 */
  justify-content: flex-end;
  align-items: center;
}

.comment-like,
.comment-reply {
  display: flex;
  align-items: center;
  margin-right: 15px;
}

.comment-like.like-o.active {
  color: #ff7173;
  /* 点赞后的颜色 */
}

.iconfont {
  margin-right: 5px;
}

/* 设置所有按钮的字体大小 */
.comments button {
  font-size: 12px;
  /* 您可以根据需要调整这个值 */
}

.comments-toggle {
  position: fixed;
  /* 固定定位 */
  bottom: 20rpx;
  /* 距离底部的距离 */
  right: 20rpx;
  /* 距离右侧的距离 */
  background-color: #ff4796;
  /* 按钮背景色 */
  color: white;
  /* 文字颜色 */
  /* 内边距，上下为10rpx，左右为0rpx */
  padding: 10rpx 0rpx;
  /* 内边距 */
  border-radius: 50rpx;
  /* 圆角 */
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.2);
  /* 阴影 */
  z-index: 999;
  /* 确保按钮在最上层 */
}

.recommendations {
  padding: 20rpx;
}

.recommendations-title{
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.r-img {
  height: 316rpx;
  border-radius: 16rpx;
}

.tag {
  font-size: 25rpx;
  color: #666;
  margin-bottom: 20rpx;
}